FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho|rhoU|rhoE|rhoEv.*)"
    {
        solver          diagonal;
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         2;
        tolerance       1e-09;
        relTol          0.01;
    }

    "(h|e).*"
    {
        $U;
        tolerance       1e-10;
        relTol          1e-3;
        minIter         1;
        maxIter         400;
    }    
   
    Yi
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-12;
        relTol          0;
        maxIter         10;
    }
    
    "(k|omega|epsilon)"
    {
    	  $U;
        tolerance       1e-15;
        relTol          1e-7;
        minIter         1
        maxIter         20;
   	}
}


