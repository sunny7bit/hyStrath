FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      chemistryProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

chemistryType
{
    chemistrySolver   Euler2Implicit;
    chemistryThermo   rho2;
}

chemistry           on;

initialChemicalTimeStep 1.0e-9;

modifiedTemperature off;
modifiedTemperatureCoeffs
{
    Tmin      800.0;
    epsilon   80.0;
}


chemistryVibrationCoupling
{
    model ShatalovParkTTv;
    
    ParkTTvCoeffs
    {
        exponentTtr         0.7;
        sourceTermModel     preferential;
        
        preferentialModel
        {
            factorType      constant;
            constantFactor  0.3;
            
            lineFittedCoeffs // Holman and Boyd (2011)
            {
                vibFactor
                {
                    N2          (5.772e-6 0.162);
                    O2          (1.136e-5 0.166);
                    NO          (9.582e-5 0.190);
                }    
            }    
        }
    } 
    
    CVDVCoeffs
    {
        reciprocalU     3;
        simpleHarmonicOscillatorVibCutOff
        {
            N2   34;
            O2   27;
            NO   28;
            N2+  34;
            O2+  27;
            NO+  28;
        }
    }

    ShatalovCoeffs
    {
	constantFactor	0.45;

	Tlow	6000;
	Thigh	11000;

        alpha
        {
            a  817.07;
            b  -0.243;
            c  2.42e-5;
            d  -8.05e-10;
        }
    }/* From:
       "Investigation of oxygen dissociation and vibrational relaxation
	at temperatures 4000-10800 K"
	http://dx.doi.org/10.1063/1.4813070 */
}

Euler2ImplicitCoeffs
{
    cTauChem        1.0;
    equilibriumRateLimiter off;
}

